<html>
<head>
  <meta charset="utf-8">
  
  <title>Fashion Feet</title>
  <!-- Tell the browser to be responsive to screen width -->
  <meta name="viewport" content="width=device-width, initial-scale=1">

  <!-- Font Awesome -->
  <link rel="stylesheet" href="/plugins/fontawesome-free/css/all.min.css">
  <!-- Theme style -->
  <link rel="stylesheet" href="/dist/css/adminlte.min.css">
  <!-- Google Font: Source Sans Pro -->
  <link href="https://fonts.googleapis.com/css?family=Source+Sans+Pro:300,400,400i,700" rel="stylesheet">
  
 
</head>
<body class="hold-transition sidebar-mini">
	
	<div class="wrapper">
		
		<!-- Navbar -->
		<nav class="main-header navbar navbar-expand navbar-white navbar-light">
		<!-- Left navbar links -->
			<ul class="navbar-nav">
				<li class="nav-item">
				<a class="nav-link" data-widget="pushmenu" href="#" role="button"> 
                                           <i class="fas fa-bars"></i></a>
				</li>
				<li class="nav-item d-none d-sm-inline-block">
				<a href="/" class="nav-link">Home</a>
				</li>
			</ul>
		</nav>
		<!-- /.navbar -->
		
		<aside class="main-sidebar sidebar-dark-primary elevation-4">
		<!-- Brand Logo -->
			<a href="#" class="brand-link">
			  <img src=""
				   alt=""
				   class="brand-image img-circle elevation-3">
			  <span class="brand-text font-weight-light">Fashion Feet</span>
			</a>
			<!-- Sidebar -->
			<div class="sidebar">
			<!-- Sidebar Menu -->
  <nav class="mt-2">
	<ul class="nav nav-pills nav-sidebar flex-column" data-widget="treeview" role="menu" data-accordion="false">
	  <li class="nav-item">
		<a href="/add" class="nav-link">
		  <i class="nav-icon far fa-circle text-info"></i>
		  <p>Add Product</p>
		</a>
	  </li>
	  <li class="nav-item">
		<a href="/details" class="nav-link">
		  <i class="nav-icon far fa-circle text-info"></i>
		  <p class="text">Sales Details</p>
		</a>
	  </li>
	  <li class="nav-item">
		<a href="/update" class="nav-link">
		  <i class="nav-icon far fa-circle text-info"></i>
		  <p class="text">Update Sales Details</p>
		</a>
	  </li>
	  
      
	  
	</ul>
</nav>
<!-- /.sidebar-menu -->
			</div>
			<!-- /.sidebar -->
		</aside>
		
		<!-- Content Wrapper. Contains page content -->
		<div class="content-wrapper">
			
			<section class="content-header">
				<h1>Fashion Feet Inventory Management</h1>
			</section>
			
			<section class="content">
				<div class="card">
                    <div class="card-header">Add product Stock</div>
                      <h3 class="card-title"></h3>

                        <br>
                        
                    <div class="card-body p-0" >
						<form action="/edited" method="POST">
                            <div class="form-group">
                                <label>
                                    Product ID:<%=users[0]['Product ID']%>
                                 </label>
                                 <input type="hidden" name="pid1" value="<%=users[0]['Product ID']%>">
                            </div>
                            <div class="form-group">
                                <label>
                                    Brand:<%=users[0]['Brand']%>
                                </label>
                            </div>
                            <div class="form-group">
                                <label>
                                    Category:<%=users[0]['Category']%>
                                </label>
                            </div>
                            <div class="form-group">
                                <label>
                                    Product Name:<%=users[0]['Name']%>
                                </label>
                            </div>
                            <div class="form-group">
                                <label>
                                   Size:<%=users[0]['Size']%>
                                </label>
                            </div>
                            <div class="form-group">
                                <label>
                                    Quantity:<%=users[0]['Quantity']%>
                                </label>
                            </div>
                            <div class="form-group">
                                <label>New Quantity
                                    <input type="text" name="newq" placeholder="Quantity">
                                </label>
                            </div>
                            <div class="form-group">
                                <label>
                                    Cost Price:<%=users[0]['Cost Price']%>
                                </label>
                            </div>
                            <div class="form-group">
                                <label>New Cost Price
                                    <input type="text" name="newcp" placeholder="New Cost Price">
                                </label>
                            </div>
                            <div class="form-group">
                                <label>
                                    Selling Price:<%=users[0]['Selling Price']%>
                                </label>
                            </div>
                            <div class="form-group">
                                <label>New Selling Price
                                    <input type="text" name="newsp" placeholder="New Selling Price">
                                </label>
                            </div>
                    </div>

					<div class="card-footer">
						
							<input type="submit" value="Submit">         
							<input type="button" value="Cancel">
						</form>
					</div>
                    
                </div>
			</section>
		</div>
		
	</div>
</body>
</html>